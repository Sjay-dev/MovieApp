<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewMovies"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imgMovies"
            android:src="@drawable/movieimageholder"
            />

        <TextView
            android:id="@+id/txtMovieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_toRightOf="@id/imgMovies"
            android:layout_marginLeft="5dp"
            android:text="Movie Title"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMoviesDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description of the movie"
            android:layout_toRightOf="@id/imgMovies"
            android:layout_below="@id/txtMovieTitle"
            android:layout_marginLeft="5dp"
            android:textColor="#949191"
            />

    </RelativeLayout>


   
</RelativeLayout>